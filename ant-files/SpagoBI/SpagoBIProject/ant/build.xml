<project name="${project.name}" default="makeDist" basedir=".">
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!--   DEFINIZIONE FILE DI PROPERTY						                                      -->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<property file="build.properties" />
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!--   DEFINIZIONE CLASSPATH						                                            -->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<path id="web.classpath">
		<pathelement path="${classpath}" />
		<!-- LIBRERIE SPECIFICHE APPLICATIVO  -->
		<fileset dir="${web.lib}">
			<include name="**/*.jar" />
		</fileset>
		<!-- LIBRERIE ESTERNE DEL WEB CONTAINER necessarie per la compilazione -->
		<!-- ma che non devono essere comprese nel war                         -->
		<fileset dir="${runtime.lib}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<!--   PULIZIA AMBIENTE						                                                -->
	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<target name="clean">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}/${webapp_name}" />
	</target>
	<target name="init" depends="clean">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />
		<mkdir dir="${build}/${webapp_name}/WEB-INF/classes" />
	</target>

	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<!--   SCARICO DEI SORGENTI AGGIORNATI DA SVN							                        -->
	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<target name="svn.checkout" depends="init" description="Sincronizza l'applicazione con il repository">
		<exec dir="${project.dir}" executable="svn">
			<arg line="checkout ${svn.base.location}/${project.name} ." />
		</exec>

		<exec dir="${project.dir}" executable="svn" output="${web.dir}/svn.properties">
			<arg value="info" />
		</exec>
	</target>


	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<!--   AGGIORNAMENTO JAR QBE.CORE							                                  -->
	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<target name="qbe.core.update" description="Updates qbe.core library from distribution folder (THIS JAR MUST BE EXISTING)">
		<!-- deletes any previuos qbe.core -->
		<delete>
			<fileset dir="${web.dir}/WEB-INF/lib" includes="**/qbe.core*.jar" />
		</delete>

		<!-- copies the newly created jar file -->
		<copy file="${qbe.core.dir}/dist/qbe.core-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />

	</target>


	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<!--   AGGIORNAMENTO JAR SBI.UTILS							                                  -->
	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<target name="sbi.utils.update" description="Updates sbi.utils library from distribution folder (THIS JAR MUST BE EXISTING)">
		<!-- deletes any previuos sbi.utils -->
		<delete>
			<fileset dir="${web.dir}/WEB-INF/lib" includes="**/sbi.utils*.jar" />
		</delete>
		<delete>
			<fileset dir="${web.dir}/WEB-INF/lib" includes="**/sbi.security.*.jar" />
		</delete>
		<!-- copies the newly created jar file -->
		<copy file="${sbiutils.json.dir}/dist/sbi.utils.json-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
		<copy file="${sbiutils.dir}/dist/sbi.utils-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />

		<antcall target="copy.sbi.security.liferay" />
		<antcall target="copy.sbi.security.exo" />
		<antcall target="copy.sbi.security.xml" />
		<antcall target="copy.sbi.security.ldap" />

  	<copy file="${liferay.security.dir}/dist/sbi.security.liferay-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
  	<copy file="${exo.security.dir}/dist/sbi.security.exo-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
  	<copy file="${xml.security.dir}/dist/sbi.security.xml-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
  	<copy file="${ldap.security.dir}/dist/sbi.security.ldap-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />

	</target>

	<!-- lifeay -->
	<target name="check.sbi.security.liferay" unless="sbi.security.liferay.file.exists">
		<available property="sbi.security.liferay.file.exists" file="${liferay.security.dir}/dist/sbi.security.liferay-${project.version}.jar" />
	</target>
	<target name="copy.sbi.security.liferay" depends="check.sbi.security.liferay" if="${sbi.security.liferay.file.exists}">
		<copy file="${liferay.security.dir}/dist/sbi.security.liferay-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
	</target>

	<!-- exo -->
	<target name="check.sbi.security.exo" unless="sbi.security.exo.file.exists">
		<available property="sbi.security.exo.file.exists" file="${exo.security.dir}/dist/sbi.security.exo-${project.version}.jar" />
	</target>
	<target name="copy.sbi.security.exo" depends="check.sbi.security.exo" if="${sbi.security.exo.file.exists}">
		<copy file="${exo.security.dir}/dist/sbi.security.lexo-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
	</target>

	<!-- xml -->
	<target name="check.sbi.security.xml" unless="sbi.security.xml.file.exists">
		<available property="sbi.security.xml.file.exists" file="${xml.security.dir}/dist/sbi.security.xml-${project.version}.jar" />
	</target>
	<target name="copy.sbi.security.xml" depends="check.sbi.security.liferay" if="${sbi.security.xml.file.exists}">
		<copy file="${xml.security.dir}/dist/sbi.security.xml-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
	</target>

	<!-- ldap -->
	<target name="check.sbi.security.ldap" unless="sbi.security.ldap.file.exists">
		<available property="sbi.security.ldap.file.exists" file="${ldap.security.dir}/dist/sbi.security.ldap-${project.version}.jar" />
	</target>
	<target name="copy.sbi.security.ldap" depends="check.sbi.security.ldap" if="${sbi.security.ldap.file.exists}">
		<copy file="${ldap.security.dir}/dist/sbi.security.ldap-${project.version}.jar" todir="${web.dir}/WEB-INF/lib" overwrite="true" />
	</target>

	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<!--   COMPILAZIONE							                                                  -->
	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<target name="compile" depends="sbi.utils.update,qbe.core.update" description="compile the source">
		<!-- Compile the java code from ${src} into ${build}/${webapp_name}/WEB-INF/classes -->
		<javac srcdir="${src}" destdir="${build}/${webapp_name}/WEB-INF/classes" debug="on">
			<classpath refid="web.classpath" />
		</javac>
	</target>

	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<!--   COPIA DELLE JSP,CSS,...                                                    -->
	<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<target name="copy.artifacts" depends="compile">
		<copy todir="${build}/${webapp_name}/WEB-INF/classes">
			<fileset dir="${src}">
				<exclude name="**/*.java" />
				<exclude name="**/*.svn" />
			</fileset>
		</copy>
		<!-- copies artifacts without filter (jars, jsp, js, ....) -->
		<copy todir="${build}/${webapp_name}">
			<fileset dir="${web.dir}">
				<exclude name="**/*.svn" />
				<exclude name="**/*.xml" />
				<exclude name="**/*.properties" />
			</fileset>
		</copy>
		<!-- copies artifacts with filter (*.xml, *.properties) -->
		<copy todir="${build}/${webapp_name}">
			<fileset dir="${web.dir}">
				<include name="**/*.xml" />
				<include name="**/*.properties" />
			</fileset>
		</copy>

		<copy file="${web.dir}/${license}" todir="${dist}" overwrite="true" />

	</target>
